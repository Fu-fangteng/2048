bool gameIsOver()
{
}
bool successful()
{
    bool res = true;
    for (int i = 0; i < 4; i++)
    {
        for (int j = 0; j < 4; j++)
        {
            if (exponentBoard[i][j] != 11)
            {
                res = false;
            }
        }
    }
    return res;
}
void closingUI()
{
    cout << "Nice play." << endl;
}

int main()
{
    int scores = 0;
    openningUI();
    string move;
    while (!gameIsOver())
    {
        cout << "Your move: " << endl;
        cin >> move;
        if (isValidMove(move))
        {
            if (move == "w")
            {
                upMove();
            }
            else if (move == "s")
            {
                downMove();
            }
            else if (move == "a")
            {
                leftMove();
            }
            else if (move == "d")
            {
                rightMove();
            }
        }
        else
            cout << "Invalid move." << endl;
    }
    if (successful())
    {
        cout << "Cangratulation!" << endl;
    }
    else
    {
        cout << "NIce play." << endl;
    }

    return 0;
}
